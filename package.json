{
  "name": "lesta_games",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write **/*.{ts,tsx}",
    "schema": "graphql-codegen get-schema --config ./src/api/gql/codegen.ts",
    "generate-gql": "graphql-codegen -r dotenv/config --config ./src/api/gql/codegen.ts && prettier --write ./src/api/gql/__generated__.ts"
  },
  "dependencies": {
